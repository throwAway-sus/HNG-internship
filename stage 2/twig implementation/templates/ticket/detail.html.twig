{% extends 'base.html.twig' %}

{% block title %}{{ ticket.title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="detail-header-row">
                <div class="detail-header-info">
                    <h2>{{ ticket.title }}</h2>
                    <p>{{ ticket.description }}</p>
                </div>
                <div class="detail-status-section">
                    <div class="badge badge--{{ ticket.status|replace({'_': '-'}) }}">
                        {{ ticket.status|replace({'_': ' '}) }}
                    </div>
                    
                    <form action="{{ path('ticket_update_status', {id: ticket.id}) }}" method="POST">
                        <select name="status" class="select" onchange="this.form.submit()">
                            <option value="open" {{ ticket.status == 'open' ? 'selected' }}>Open</option>
                            <option value="in_progress" {{ ticket.status == 'in_progress' ? 'selected' }}>In Progress</option>
                            <option value="closed" {{ ticket.status == 'closed' ? 'selected' }}>Closed</option>
                        </select>
                    </form>
                </div>
            </div>

            <div class="detail-section">
                <div>
                    <div class="detail-label">Priority</div>
                    <div class="detail-value" style="text-transform: capitalize;">{{ ticket.priority }}</div>
                </div>

                <div>
                    <div class="detail-label">Created</div>
                    {# The 'date' filter replaces new Date().toLocaleString() #}
                    <div class="detail-value">{{ ticket.createdAt|date("F j, Y \a\\t g:i A") }}</div>
                </div>
            </div>

            <div class="back-button-wrapper">
                <a href="{{ app.session.get('last_tickets_page') ?? path('ticket_list') }}" class="button button--primary">Back</a>
            </div>
        </div>
    </div>
{% endblock %}
