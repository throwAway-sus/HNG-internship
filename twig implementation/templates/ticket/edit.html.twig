{% extends 'base.html.twig' %}

{% block body %}
<div class="page-wrap">

    <div class="container">
        <div class="page-header">
            <div class="header-info">
                <h1>Edit Ticket</h1>
                <p>Modify fields and save your changes</p>
            </div>
        </div>

        <div class="tickets-grid-layout">
            <div>
                <div class="card">
                    <h3 class="title" style="margin-top:0;">Ticket Details</h3>

                    <form method="POST" action="{{ path('ticket_update', { id: ticket.id }) }}">
                        <div class="form-row">
                            <label class="label">Title</label>
                            <input class="input" type="text" name="title" value="{{ ticket.title }}" required>
                        </div>

                        <div class="form-row">
                            <label class="label">Description</label>
                            <textarea class="textarea" name="description" required>{{ ticket.description }}</textarea>
                        </div>

                        <div class="form-row">
                            <label class="label">Priority</label>
                            <select class="select" name="priority">
                                <option value="low" {% if ticket.priority == 'low' %}selected{% endif %}>Low</option>
                                <option value="medium" {% if ticket.priority == 'medium' %}selected{% endif %}>Medium</option>
                                <option value="high" {% if ticket.priority == 'high' %}selected{% endif %}>High</option>
                            </select>
                        </div>

                        <div class="form-row">
                            <label class="label">Status</label>
                            <select class="select" name="status">
                                <option value="open" {% if ticket.status == 'open' %}selected{% endif %}>Open</option>
                                <option value="in_progress" {% if ticket.status == 'in_progress' %}selected{% endif %}>In Progress</option>
                                <option value="closed" {% if ticket.status == 'closed' %}selected{% endif %}>Closed</option>
                            </select>
                        </div>

                        <div class="button-row">
                            <button type="submit" class="button button--primary">
                                Save
                            </button>

                            <a href="{{ path('ticket_detail', { id: ticket.id }) }}" class="button button--nav">
                                Cancel
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>

    <footer class="footer-wrap">
        {{ "now"|date("Y") }} Ticketi•fy — © UnSiMplYkells
    </footer>

</div>
{% endblock %}
